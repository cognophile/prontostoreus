{
    "name": "your-name-here/CustomerComponent",
    "description": "CustomerComponent plugin for CakePHP",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "cakephp/cakephp": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7.14|^6.0"
    },
    "autoload": {
        "psr-4": {
            "CustomerComponent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CustomerComponent\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/"
        }
    }
}
